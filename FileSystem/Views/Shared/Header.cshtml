    }
    else
    {
        <a class="navbar-brand" href="#">FileSystem</a>
        <div class="nav navbar-nav navbar-right">
            <a class="navbar-brand" href="@Url.Action("Login", "Account")">Log In</a>
            <a class="navbar-brand" href="@Url.Action("Register", "Account")">Sign Up</a>
        </div>
    }
