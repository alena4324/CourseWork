    {
        <a class="navbar-brand" href="@Url.Action("AllDrives", "Directory")">FileSystem</a>
        <div class="nav navbar-nav navbar-right">
            @if (this.User.Identity.Name == "admin")
            {
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="" data-toggle="dropdown" class="dropdown-toggle navbar-brand">Settings<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("GetAllUsers", "Admin")">Users</a></li>
                            <li><a href="@Url.Action("ChangePassword", "Account")">Change password</a></li>
                        </ul>
                    </li>
                </ul>
                <a class="navbar-brand" href="@Url.Action("LogOut", "Account")">Sign Out</a>
